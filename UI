import React, { useState, useEffect } from 'react';
import { 
  Leaf, 
  Wind, 
  Sun, 
  HeartPulse, 
  CheckCircle, 
  Star, 
  Menu, 
  X, 
  ArrowRight,
  LogOut,
  Droplets,
  Zap
} from 'lucide-react';

